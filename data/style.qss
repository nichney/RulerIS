QMainWindow {
    background-color: #def5fc;
    margin: 0px;
}

QPushButton {
    border-radius: 8px;
    border: 1px;
}

QPushButton#no:hover {
    background-color: white;
}
QPushButton#yes:hover {
    background-color: white;
}
QPushButton#res:hover {
    background-color: white;
}

QPushButton#no {
    background-color: #facfd3;
    font-family: sans-serif;
    font-size: 50pt;
}
QPushButton#yes {
    background-color: #aafaab;
    font-family: sans-serif;
    font-size: 50pt;
}
QPushButton#res {
    background-color: #acfcfb;
    font-family: Helvetica, sans-serif;
    font-size: 20pt;
}

QLabel {
    font-size: 14pt;
}
