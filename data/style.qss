    font-family: Helvetica, sans-serif;
    font-size: 30pt;
}
QLabel#description {
    font-family: Helvetica, sans-serif;
    font-size: 30pt;
}
QLabel#question  {
    font-family: Helvetica, sans-serif;
    font-size: 30pt;
}
QLabel#author {
    font-size: 16pt;
}